<div class="container" style="text-align: center">
  <br/>
<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

<form action="/robots/<%= @robot.id %>" method="post">
  <h2 style="font-weight: lighter">Edit Robot</h2>
  <input type="hidden" name="_method" value="PUT" />
  <input style="border: 2px solid black; border-radius: 4px;" type='text' class="form-control" name='robot[name]' value="<%= @robot.name %>"/><br/>
  <input style="border: 2px solid black; border-radius: 4px;" type='text' class="form-control" name='robot[city]' value="<%= @robot.city %>"/><br/>
  <input style="border: 2px solid black; border-radius: 4px;" type='text' class="form-control" name='robot[state]' value="<%= @robot.state %>"/><br/>
  <input style="border: 2px solid black; border-radius: 4px;" type='text' class="form-control" name='robot[department]' value="<%= @robot.department %>"/><br/>
  </br><input type="submit" class="btn btn-info" value="Submit">
</form>
</div>
